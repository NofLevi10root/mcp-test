# Security MCP Server Environment Variables
# Copy this file to .env and fill in your API keys

# Shodan API Key (get from https://account.shodan.io/)
SHODAN_API_KEY=your_shodan_api_key_here

# LeakCheck API Key (get from https://leakcheck.io/api)
LEAKCHECK_API_KEY=your_leakcheck_api_key_here

# Optional: Custom Nuclei templates path
# NUCLEI_TEMPLATES_PATH=/custom/templates/path

# Optional: Debug settings
# DEBUG=true
# LOG_LEVEL=DEBUG
# LOG_FILE=security_mcp.log

# Optional: Security settings
# MAX_CONCURRENT_TOOLS=5
# RATE_LIMIT_PER_MINUTE=60
